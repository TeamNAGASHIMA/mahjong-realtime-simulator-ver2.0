{
  "name": "mahjong-realtime-simulator",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
      "from": "mahjong-cpp",
      "to": "mahjong-cpp"
      },
      {
        "from": "backend/run_Django",
        "to": "backend"
      }
    ],
    "directories": {
      "output": "dist"
    }
  }
}
